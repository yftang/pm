<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <h3>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h3>

    <br />
    <table>
      <tr>
        <td><strong>Email: </strong><%= @user.email %></td>
      </tr>
    </table>

  </aside>
  <div class="span8">
  <h3>Projects</h3>
    <% if @user.projects.any? %>
      <ol class="projects">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
    <% end %>
  </div>
</div>
